[Unit]
Description=owncloud-dan Container
After=docker.service
Requires=docker.service

[Service]
User={{allusers.owncloud.name}}
TimeoutStartSec=1min
TimeoutStopSec=90s
Restart=always
RestartSec=10
StartLimitInterval=0
ExecStartPre=-/usr/bin/docker stop owncloud
ExecStop=/usr/bin/docker stop owncloud
ExecStopPost=/usr/bin/docker rm --force --volumes owncloud
ExecStart=/usr/bin/docker run --rm -v /home/{{allusers.owncloud.name}}/owncloud/site/:/srv/http/ -v /home/{{allusers.owncloud.name}}/owncloud/data/:/owncloud/ -e DO_SSL_SELF_GENERATION=true -e SUBJECT=/C=DE/ST=CA/L=CITY/O=ORGANIZATION/OU=DANIEL/CN=localhost --name owncloud -p 10443:443 owncloud-dan:{{owncloudtag}}

[Install]
WantedBy=multi-user.target
